<Window x:Class="Gymble.Views.Popup.AddMemberWIndow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gymble.Views.Popup"
        xmlns:converter="clr-namespace:Gymble.Converter"
        xmlns:vms="clr-namespace:Gymble.ViewModels.Popup"
        mc:Ignorable="d"
        Title="AddMemberWIndow" Height="450" Width="400" Style="{StaticResource WindowChromeStyle}">

    <Window.DataContext>
        <vms:AddMemberViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <converter:TagMatchConverter x:Key="TagMatchConverter" />
        <converter:DateTimeToKoreanDateConverter x:Key="dateTimeConverter"/>
    </Window.Resources>
    
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid DockPanel.Dock="Top">
                <TextBlock Text="회원 추가" Margin="12 0"
                           FontWeight="Bold" FontSize="20" VerticalAlignment="Center"/>
                <Button Content="X" Style="{StaticResource WIndowChromeButtonStyle}"
                        Foreground="Black" FontSize="18" FontWeight="Bold"
                        HorizontalAlignment="Right"
                        Command="{Binding CloseCommand}"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="이름" 
                           Style="{StaticResource AddMemberWindowTextBlockStyle}"/>
                <TextBlock Grid.Row="1" Text="성별" 
                           Style="{StaticResource AddMemberWindowTextBlockStyle}"/>
                <TextBlock Grid.Row="2" Text="전화번호" 
                           Style="{StaticResource AddMemberWindowTextBlockStyle}"/>
                <TextBlock Grid.Row="3" Text="생년월일" 
                           Style="{StaticResource AddMemberWindowTextBlockStyle}"/>
                <TextBlock Grid.Row="4" Text="등록일" 
                           Style="{StaticResource AddMemberWindowTextBlockStyle}"/>
                <TextBlock Grid.Row="5" Text="메모" 
                           Style="{StaticResource AddMemberWindowTextBlockStyle}"/>

                <TextBox Grid.Column="1" Margin="12 10" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="18" Style="{StaticResource MaterialDesignTextBox}"/>

                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
                    <RadioButton Content="남성" GroupName="gender" Tag="Male"
                                 Foreground="Black" FontWeight="Bold" FontSize="14"
                                 Width="100" Margin="20 0"
                                 Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}"
                                 IsChecked="{Binding SelectedGender, Converter={StaticResource TagMatchConverter}, ConverterParameter=Male, Mode=TwoWay}"/>
                    <RadioButton Content="여성" GroupName="gender" Tag="Female"
                                 Foreground="Black" FontWeight="Bold" FontSize="14"
                                 Width="100" Margin="20 0"
                                 Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}"
                                 IsChecked="{Binding SelectedGender, Converter={StaticResource TagMatchConverter}, ConverterParameter=Female, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center">
                    <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Text="{Binding PhoneFirst, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             BorderThickness="1" BorderBrush="Gray"
                             Margin="0 10" Padding="0" HorizontalContentAlignment="Center" Width="70"
                             Foreground="Black" FontSize="16"/>
                    <TextBlock Text="-" VerticalAlignment="Center" Margin="10 0"
                               FontWeight="Bold" FontSize="16"/>
                    <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Text="{Binding PhoneMiddle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             BorderThickness="1" BorderBrush="Gray"
                             Margin="0 10" Padding="0" HorizontalContentAlignment="Center" Width="70"
                             Foreground="Black" FontSize="16"/>
                    <TextBlock Text="-" VerticalAlignment="Center" Margin="10 0"
                               FontWeight="Bold" FontSize="16"/>
                    <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Text="{Binding PhoneLast, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             BorderThickness="1" BorderBrush="Gray"
                             Margin="0 10" Padding="0" HorizontalContentAlignment="Center" Width="70"
                             Foreground="Black" FontSize="16"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center">
                    <ComboBox Text="연도" Width="90" Margin="0 10"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              BorderThickness="1" BorderBrush="Gray"
                              Foreground="Black" FontSize="16"
                              ItemsSource="{Binding Years}"
                              SelectedItem="{Binding SelectedBirthYear, Mode=OneWayToSource}"/>
                    <ComboBox Text="월" Width="70" Margin="17 10"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              BorderThickness="1" BorderBrush="Gray"
                              Foreground="Black" FontSize="16"
                              ItemsSource="{Binding Months}"
                              SelectedItem="{Binding SelectedBirthMonth, Mode=OneWayToSource}"/>
                    <ComboBox Text="일" Width="70" Margin="0 10"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              BorderThickness="1" BorderBrush="Gray"
                              Foreground="Black" FontSize="16"
                              ItemsSource="{Binding Days}"
                              SelectedItem="{Binding SelectedBirthDay, Mode=OneWayToSource}"/>
                </StackPanel>

                <TextBlock Text="{Binding RegisterDate, Mode=TwoWay, Converter=dateTimeConverter}" Foreground="Black" FontSize="16"
                           Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <TextBlock Text="{Binding Memo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="Black" FontSize="16"
                           Grid.Row="5" Grid.Column="1" Margin="12 10"
                           Style="{StaticResource MaterialDesignTextBlock}"/>
            </Grid>
            
            <StackPanel Grid.Row="7" Margin="12 0"
                        HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Content="추가" Command="{Binding AddCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
