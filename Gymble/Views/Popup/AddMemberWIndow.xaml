<Window x:Class="Gymble.Views.Popup.AddMemberWIndow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gymble.Views.Popup"
        mc:Ignorable="d"
        Title="AddMemberWIndow" Height="450" Width="400" Style="{StaticResource WindowChromeStyle}">
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid DockPanel.Dock="Top">
                <TextBox Text="회원 추가" Margin="12 0"
                         FontWeight="Bold" FontSize="20"/>
                <Button Content="X" Style="{StaticResource WIndowChromeButtonStyle}"
                        Foreground="Black" FontSize="18" FontWeight="Bold"
                        HorizontalAlignment="Right"
                        Command="{Binding CloseCommand}"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="이름" 
                           Style="{StaticResource AddMemberWindowTextBlockStyle}"/>
                <TextBlock Grid.Row="1" Text="성별" 
                           Style="{StaticResource AddMemberWindowTextBlockStyle}"/>
                <TextBlock Grid.Row="2" Text="전화번호" 
                           Style="{StaticResource AddMemberWindowTextBlockStyle}"/>
                <TextBlock Grid.Row="3" Text="생일" 
                           Style="{StaticResource AddMemberWindowTextBlockStyle}"/>
                <TextBlock Grid.Row="4" Text="등록일" 
                           Style="{StaticResource AddMemberWindowTextBlockStyle}"/>
                <TextBlock Grid.Row="5" Text="메모" 
                           Style="{StaticResource AddMemberWindowTextBlockStyle}"/>

                <TextBox Grid.Column="1" Margin="12 10" Text="4545"
                         FontSize="18" Style="{StaticResource MaterialDesignTextBox}"/>
            </Grid>
            
            <StackPanel Grid.Row="7" Margin="12 0"
                        HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Content="추가" Command="{Binding AddCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
