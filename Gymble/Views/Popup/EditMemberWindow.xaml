                        <ComboBox Text="연도" Width="95" Height="35" 
                                  Margin="0 10" Padding="10 0"
                                  Style="{StaticResource MdOutlined.PopupBg}"
                                  ItemsSource="{Binding Years}"
                                  SelectedItem="{Binding SelectedYear, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        </ComboBox>
                        <ComboBox Text="월" Width="75" Height="35" 
                                  Margin="17 10" Padding="10 0"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  ItemsSource="{Binding Months}"
                                  SelectedItem="{Binding SelectedMonth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
