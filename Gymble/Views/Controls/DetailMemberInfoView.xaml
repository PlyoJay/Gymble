<UserControl x:Class="Gymble.Views.Controls.DetailMemberInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gymble.Views.Controls"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:sys="clr-namespace:System;assembly=netstandard"
             mc:Ignorable="d" 
             d:DesignHeight="790" d:DesignWidth="484"
             x:Name="root">
    <Border BorderThickness="1" BorderBrush="{StaticResource DefaultBorderBrushColor}"
            CornerRadius="8">
        <StackPanel Margin="20">

                     <!--회원 정보-->
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding ElementName=root, Path=Member.Name}" 
                               Style="{StaticResource TitleTextBlockStyle}"/>
                    <ContentControl Template="{StaticResource StatusControlTemplate}" 
                                    Width="80" Height="25" Margin="20 0"
                                    Content="{Binding ElementName=root, Path=Member.Status,
                                                      Converter={StaticResource MemberStatusToBadgeConverter}}"
                                    ContentTemplate="{x:Null}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10">
                    <TextBlock Text="{Binding ElementName=root, Path=Member.Gender,
                        Converter={StaticResource GenderToKoreanConverter}}" 
                               Style="{StaticResource InfoTextBlockStyle}"/>
                    <TextBlock Text=" / " Style="{StaticResource InfoTextBlockStyle}"/>
                    <TextBlock Text="{Binding ElementName=root, Path=Member.PhoneNumber,
                        Converter={StaticResource PhoneNumberConverter}}" 
                               Style="{StaticResource InfoTextBlockStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Content="이용권 추가" 
                            Command="{Binding AddProductCommand}"
                            Style="{StaticResource BaseButtonStyle}"
                            Width="220"/>
                    <Button Content="수정"
                            Command="{Binding EditCommand}"
                            Style="{StaticResource BorderedButtonStyle}"
                            Width="100" Margin="10 0"/>
                    <Button Content="삭제" 
                            Command="{Binding DeleteCommand}"
                            Style="{StaticResource BorderedButtonStyle}"
                            Width="100" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
            
            <Separator Margin="0 20"
                       BorderThickness="1" 
                       BorderBrush="{StaticResource SeperatorBorderBrushColor}"/>

            <StackPanel>
                <TextBlock Text="현재 이용권" Style="{StaticResource TitleTextBlockStyle}"/>
                <ContentControl Template="{StaticResource DefaultCardTemplate}"
                                Margin="0 10"
                                MinHeight="150">
                    <Grid>
                        <TextBlock Text="이용중인 이용권이 없습니다."
                                   Style="{StaticResource NoDataTextBlockStyle}"/>
                        <StackPanel Margin="15" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="3개월 헬스권" 
                                           FontSize="18"
                                           Style="{StaticResource ContentDataTextBlockStyle}"/>
                                <TextBlock Text="2026-02-05 ~ 2026-05-05" 
                                           Style="{StaticResource ContentDataTextBlockStyle}"
                                           Margin="0 10"/>
                                <ContentControl Template="{StaticResource StatusControlTemplate}" 
                                                Width="90" Height="30"
                                                Background="#FF7700" Foreground="White"
                                                Content="만료-91"
                                                HorizontalAlignment="Left"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ContentControl>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="메모" Style="{StaticResource TitleTextBlockStyle}"/>
                <ContentControl Template="{StaticResource DefaultCardTemplate}"
                                Margin="0 10" MinHeight="50"
                                VerticalContentAlignment="Center">
                    <Grid Margin="15 0">
                        <TextBlock Text="{Binding ElementName=root, Path=Member.Memo}" 
                                   MaxWidth="300"
                                   Style="{StaticResource ContentDataTextBlockStyle}"
                                   HorizontalAlignment="Left"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="NoWrap"/>
                        <Button HorizontalAlignment="Right"
                                Style="{StaticResource ReadMoreButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="더보기"
                                           VerticalAlignment="Center"
                                           Margin="0 0 5 0"/>
                                <md:PackIcon Kind="ChevronRight"
                                             Width="25" Height="25"
                                             VerticalAlignment="Center"
                                             Foreground="Black"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </ContentControl>
            </StackPanel>
            
            <Separator Margin="0 10 0 20"
                       BorderThickness="1" 
                       BorderBrush="{StaticResource SeperatorBorderBrushColor}"/>

            <TabControl Style="{StaticResource GymbleTabControlStyle}" Height="260"
                        AlternationCount="1000000">
                <TabItem Header="이용권/결제 이력"
                         Style="{StaticResource GymbleTabItemStyle}">
                    <Grid>
                        <TextBlock Text="이력이 없습니다."
                                   Style="{StaticResource NoDataTextBlockStyle}"/>
                    </Grid>
                </TabItem>
                <TabItem Header="출석 기록"
                         Style="{StaticResource GymbleTabItemStyle}">
                    <Grid>
                        <TextBlock Text="출석 기록이 없습니다."
                                   Style="{StaticResource NoDataTextBlockStyle}"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Border>
</UserControl>
